<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0FFFF">

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_fiat"
        android:id="@+id/btn_fiat"
        android:layout_marginTop="30dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btn_price"
        android:layout_toStartOf="@+id/btn_price" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_honda"
        android:id="@+id/btn_honda"
        android:layout_below="@+id/btn_fiat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_corvett"
        android:id="@+id/btn_corvett"
        android:layout_below="@+id/btn_honda"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_kia"
        android:id="@+id/btn_kia"
        android:layout_below="@+id/btn_corvett"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_bmw"
        android:id="@+id/btn_bmw"
        android:layout_toEndOf="@+id/btn_corvett"
        android:layout_toRightOf="@+id/btn_corvett"
        android:layout_below="@+id/btn_kia"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_price"
        android:id="@+id/btn_price"
        android:layout_toEndOf="@+id/btn_honda"
        android:layout_marginLeft="41dp"
        android:layout_alignBaseline="@+id/btn_kia"
        android:layout_alignBottom="@+id/btn_kia"
        android:layout_toRightOf="@+id/btn_honda" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_power"
        android:id="@+id/btn_power"
        android:layout_below="@+id/btn_kia"
        android:layout_alignLeft="@+id/btn_price"
        android:layout_alignStart="@+id/btn_price" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Selected car will be shown here."
        android:id="@+id/tv1"
        android:layout_above="@+id/btn_corvett"
        android:layout_alignLeft="@+id/btn_price"
        android:layout_alignStart="@+id/btn_price"
        android:layout_alignRight="@+id/btn_price"
        android:layout_alignEnd="@+id/btn_price"
        android:layout_alignTop="@+id/btn_honda" />

</RelativeLayout>